<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:background="@color/mainColor">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="53dp"
        android:layout_height="76dp"
        android:background="@drawable/calendary_day_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bg"
        android:layout_alignBottom="@+id/bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Day_of_the_week_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserra_bold"
            android:gravity="center"
            android:text="Pon"
            android:textColor="#C4DFE6"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Day_of_the_week_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserra_bold"
            android:gravity="center"
            android:text="11"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</RelativeLayout>